{{!-- signup y login --}}
<section class='p-4 bg-secondary'>
  <h2>Signup</h2>
  <form action="/session/signup" method="post">
    <div >  
      <span>username</span>
      <input class="form-control" type="text" name="username">
    </div>
    <div >
      <span>password</span>
      <input class="form-control" type="text" name="password">
    </div>
    <div>  
      <span>email</span>
      <input class="form-control" type="email" name="email">
    </div>
    <div>  
      <span>address</span>
      <input class="form-control" type="text" name="address">
    </div>
    <div>  
      <span>age</span>
      <input class="form-control" type="number" name="age">
    </div>
    <div>  
      <span>phone number</span>
      <input class="form-control" type="text" name="phoneNumber">
    </div>
    <label for="avatar">Avatar</label>
  <input class="form-control" type="file" id="avatar" name="avatar" accept="image/*">
    <button type="submit">Submit</button>
  </form>
  <h2>login</h2>
  <form action="/session/login" method="post">
    <div >
      <span>name</span>
      <input class="form-control" type="text" name="username">
    </div>
    <div>
      <span>password</span>
      <input class="form-control" type="text" name="password">
    </div>
    <button id="submit" type="submit">Submit</button>
  </form>
    <button id="logout">Logout</button>
</section>
<section class='p-4 bg-secondary'>
	<h2 class='alert alert-dark text-center'>Ingrese Producto</h2>
	<form id="form" action='/api/productos' method='POST'>
		<div class='mb-3'>
			<label class='form-label fw-bold' for='name'>Nombre</label>
			<input class='form-control' type='text' name='title' id="title"/>
		</div>
		<div class='mb-3'>
			<label class='form-label fw-bold' for='price'>Precio</label>
			<input class='form-control' type='number' name='price' id="price" />
		</div>
		<div class='mb-3'>
			<label class='form-label fw-bold' for='picture'>Foto URL</label>
			<input class='form-control' type='text' name='thumbnail' id="thumbnail" />
		</div>
		<div class='mb-3'>
			<input class='btn btn-primary' id="submit" type='submit' onclick="formAddE(document.getElementById('submit'))" value='Guardar' />
		</div>
	</form>
	
</section>
